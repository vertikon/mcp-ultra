# MCP Ultra Environment Configuration
# Copy this file to .env and update the values

# ===== Server Configuration =====
HTTP_PORT=9655
GRPC_PORT=9656
HTTP_ADDR=:9655

# ===== Database Configuration =====
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mcp_ultra
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SSLMODE=disable
POSTGRES_MAX_CONNECTIONS=25
POSTGRES_MAX_IDLE_CONNECTIONS=10

# ===== Redis Cache Configuration =====
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# ===== Event Bus Configuration =====
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=mcp-cluster
NATS_CLIENT_ID=mcp-ultra
NATS_USER=
NATS_PASSWORD=

# ===== Security Configuration =====
# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_generate_a_strong_one_minimum_32_chars
JWT_TOKEN_EXPIRY=24h
JWT_ISSUER=mcp-ultra

# API Key Authentication
API_KEY=your_api_key_here_for_service_to_service_auth
API_KEY_HEADER=X-API-Key

# Authentication Middleware
REQUIRED_ROLES=user,admin
SKIP_AUTH_PATHS=/health,/metrics,/swagger

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# ===== Observability Configuration =====
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_API_TOKEN=
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_PORT=9090
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_USER=
JAEGER_PASSWORD=

# ===== Feature Flags =====
FEATURE_FLAGS_ENABLED=true
FEATURE_FLAGS_CACHE_TTL=5m

# ===== Compliance Configuration =====
COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true

# ===== Application Configuration =====
LOG_LEVEL=info
LOG_FORMAT=json
GRACEFUL_SHUTDOWN_TIMEOUT=30s
REQUEST_TIMEOUT=30s

# ===== Development Configuration =====
DEBUG_MODE=false
ENABLE_PPROF=false
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===== External Services =====
VAULT_ADDR=
VAULT_TOKEN=
VAULT_AUTH_METHOD=token

# ===== Monitoring & Alerting =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# ===== TLS Configuration =====
TLS_ENABLED=false
TLS_CERT_FILE=./certs/server.crt
TLS_KEY_FILE=./certs/server.key
