# .env do MCP (exemplo) - IA opt-in

# ===== FEATURE FLAGS =====
ENABLE_AI=false
AI_MODE=balanced
AI_CANARY_PERCENT=0
AI_ROUTER=rules

# ===== AI LIMITS =====
AI_MAX_TOKENS=2048
AI_TIMEOUT_MS=9000
AI_MAX_RPM=120
AI_MAX_TPD=150000

# ===== BUDGETS =====
AI_BUDGET_DAILY_BRLCAP=120.00

# ===== PROVIDERS (placeholders - use Secret Manager) =====
PROVIDER_PRIMARY=openai
OPENAI_API_KEY=<secret>
OPENAI_ENDPOINT=https://api.openai.com/v1

QWEN_API_KEY=<secret>
QWEN_ENDPOINT=<url>

LOCAL_ENDPOINT=http://localhost:9400

# ===== TELEMETRY =====
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_METRICS_PORT=0

# ===== NATS =====
NATS_URL=nats://localhost:4222
NATS_STREAM=ultra_ai_events
NATS_SUBJECT_PREFIX=ultra.ai

# ===== CONTEXT =====
TENANT_ID=default
MCP_ID=<preencher>
SDK_NAME=<preencher-ou-vazio>
